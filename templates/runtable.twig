{% extends "layout.twig" %}

{% block content %}
    <strong>Running in 2018</strong>
    <table>
        <thead></thead>
        <tbody>
            {% for run in myRuns %}
                <tr>
                    <td>{{ run.run_date }} <small>({{ run.run_day }})</small></td>
                    <td align="right">{{ run.KMtoGo|number_format(2, ',', '.') }}</td>
                    <td align="right">{{ run.totalKM|number_format(2, ',', '.') }} km</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock content %}